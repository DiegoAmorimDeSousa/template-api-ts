{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@services/*": ["./src/app/services/*"],
      "@models/*": ["./src/app/models/*"],
      "@controllers/*": ["./src/app/controllers/*"],
      "@utils/*": ["./src/app/utils/*"]
    }
  },
  "exclude": ["node_modules"]
}
